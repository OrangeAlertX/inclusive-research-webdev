{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "rootDirs": [
      "./",
      "../ComponentViewer/src/components/Viewer",
      "../ComponentCollection/src"
    ],
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "../ComponentViewer/src/components/Viewer",
    "../ComponentViewer/src/utils",
    "../ComponentCollection/src",
    "../Core/src"
  ],
  "exclude": ["node_modules", "dist/**/*"],
  "references": [{ "path": "./tsconfig.vite.json" }]
}
